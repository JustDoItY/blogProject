{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@/*": ["*"],
      "@images/*": ["assets/images/*"],
      "@fonts/*": ["assets/fonts/*"]
    }
  }
}
